# LinkedIn Contact Extractor - Subscription Version
# Copy this file to .env.local for your subscription deployment

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/linkedin_extractor_subscription

# Supabase Configuration (required for credits system)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Wiza API Configuration
WIZA_API_KEY=your-wiza-api-key

# NOWPayments Configuration
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_IPN_SECRET=your-nowpayments-ipn-secret

# JWT Secret for sessions
JWT_SECRET=your-jwt-secret-key

# App Configuration
NEXT_PUBLIC_APP_URL=https://ziwa.pro

# TRON/TRC-20 Configuration
NEXT_PUBLIC_TRON_NETWORK=mainnet # or 'testnet' for testing
NEXT_PUBLIC_PAYMENT_WALLET_ADDRESS=your_tron_wallet_address_here
TRON_API_KEY=your_tronpro_api_key_here # For TronGrid API
NEXT_PUBLIC_USDT_CONTRACT_ADDRESS=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t # USDT TRC-20 on mainnet

# Payment Configuration (Pay-as-you-go)
NEXT_PUBLIC_CREDITS_PER_USDT=30 # How many credits per 1 USDT
NEXT_PUBLIC_MIN_DEPOSIT_USDT=10 # Minimum deposit amount in USDT
NEXT_PUBLIC_CREDITS_PER_EMAIL=1 # Credits charged per email found
NEXT_PUBLIC_CREDITS_PER_PHONE=2 # Credits charged per phone found

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD_HASH=your_bcrypt_hash_here

# Application Settings
NEXT_PUBLIC_USE_SIMULATION=false
NEXT_PUBLIC_SUBSCRIPTION_MODE=true 